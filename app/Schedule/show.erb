<script type="text/javascript"><!--
  $(function() {
    $("#scroll_area").height(
        $(window).height() -
        $("#toolber").height()
    ).flickable();
  });
//--></script>

<style type="text/css">
.scroll_area .show_header {
  width: 100%;
  height: 24px;
  color: white;
  font-size: 18px;
  padding-top: 6px;
  text-indent: 5px;
  vertical-align: middle;
  background: -moz-linear-gradient(top, rgba(4,128,177,1.0), rgba(4,156,217,1.0));
  background: -webkit-gradient(linear, left top, left bottom, from(rgba(4,128,177,1.0)), to(rgba(4,156,217,1.0)));
  box-shadow: 0px 3px 3px #000000;
  -moz-box-shadow: 0px 3px 3px #000000;
  -webkit-box-shadow: 0px 3px 3px #000000;
}
.scroll_area .show_detail {
  width: 100%;
  padding-top: 5px;
  background-color: transparent;
}
.scroll_area .show_detail .subtitle {
  width: 80%;
  margin-top: 10px;
  background-color: transparent;
  border-bottom: 2px solid #0480B1;
  box-shadow: 0px 3px 3px #000000;
  -moz-box-shadow: 0px 3px 3px #000000;
  -webkit-box-shadow: -2px 3px 3px #000000;
}
.scroll_area .show_detail .content {
  width: 80%;
  margin-top: 5px;
  margin-left: 15px;
  background-color: transparent;
}
.scroll_area .show_detail .content a {
  background: -moz-linear-gradient(top, rgba(4,128,177,1.0), rgba(4,156,217,1.0));
  background: -webkit-gradient(linear, left top, left bottom, from(rgba(4,128,177,1.0)), to(rgba(4,156,217,1.0)));
  box-shadow: 0px 3px 3px #000000;
  -moz-box-shadow: 0px 3px 3px #000000;
  -webkit-box-shadow: 0px 3px 3px #000000;
}
</style>

<div class="toolbar" id="toolber">
  <table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
      <td>
        <form action="<%= url_for :action => :day_schedules, :query => @back %>">
          <input type="submit" class="standardButton" value="戻る"/>
        </form>
      </td>
      <td>
        <form action="<%= url_for :action => :edit, :id => @schedule.id %>">
          <input type="submit" class="standardButton" value="修正"/>
        </form>
      </td>
    </tr>
  </table>
</div>

<div class="scroll_area" id="scroll_area">
  <div class="show_header"><%= @schedule.subject %></div>
  <div class="show_detail">
    <div class="subtitle">内容</div>
    <div class="content"><%= @schedule.description %></div>
    <div class="subtitle">行き先</div>
    <div class="content"><%= @schedule.description %>
      <div style="text-align:right;"><a href="/app/Map"><p>ルート表示</p></a></div>
    </div>
  </div>
</div>

