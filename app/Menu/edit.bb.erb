<div id="pageTitle">
		<h1>Edit <%= @menu.id:integer%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @menu.object %>
    <%= link_to "Delete", :action => :delete, :id => @menu.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @menu.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Id:integer: </td>
              			<td class="itemValue"><input type="text" name="menu[id:integer]" value="<%= @menu.id:integer %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
