<div id="pageTitle">
	<h1><%= @user.name%></h1>
</div>

<div id="toolbar">
        <%= link_to "Back", :action => :index %>
        <%= link_to "Edit", :action => :edit, :id => @user.object %>
</div>


<div id="content">

    <table>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @user.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Login</td>
        <td class="itemValue"><%= @user.login%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Passwd</td>
        <td class="itemValue"><%= @user.passwd%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Email</td>
        <td class="itemValue"><%= @user.email%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Lock</td>
        <td class="itemValue"><%= @user.lock%></td>
      </tr>
      
    </table>
</div>