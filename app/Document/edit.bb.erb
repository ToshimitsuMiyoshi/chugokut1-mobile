<div id="pageTitle">
		<h1>Edit <%= @document.schedule_id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @document.object %>
    <%= link_to "Delete", :action => :delete, :id => @document.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @document.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Schedule: </td>
              			<td class="itemValue"><input type="text" name="document[schedule_id]" value="<%= @document.schedule_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="document[name]" value="<%= @document.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Url: </td>
              			<td class="itemValue"><input type="text" name="document[url]" value="<%= @document.url %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
