<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @map.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :view %>">
      <input type="hidden" name="id" value="<%= @map.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="map[latitude]" class="fieldLabel">Latitude</label>
            <input type="text" id="map[latitude]" name="map[latitude]" value="<%= @map.latitude %>" <%= placeholder("Latitude") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="map[longitude]" class="fieldLabel">Longitude</label>
            <input type="text" id="map[longitude]" name="map[longitude]" value="<%= @map.longitude %>" <%= placeholder("Longitude") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="map[address]" class="fieldLabel">Address</label>
            <input type="text" id="map[address]" name="map[address]" value="<%= @map.address %>" <%= placeholder("Address") %> />
          </div>
      

      <input type="submit" value="View"/>
    </form>
  </div>

</div>
